<%= form_with model:@comment, url: create_comment_path do |f| %> 
  <div class='row'> 
    <div class='col-md-9'> 
      <%= f.text_field :content, class:'form-control', placeholder:'comment' %> 
    </div> 
    <div class='col-md-3'> 
      <%= f.submit "Send", class:'btn btn-primary'%> 
    </div> 
  </div> 
<% end %> 