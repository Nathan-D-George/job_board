<div class="list-group">
  <% users.each do |user| %>
    <%= link_to show_user_path(id: user.id), class:"list-group-item list-group-item-action mb-4 post" do %>
      <div class='row'>
        <div class='col-md-3'>
        <%= image_tag(user.photo, class:'small-circle-photo') if user.photo.present? %>
        </div>
        <div class="d-flex justify-content-between mb-2 col-md-8">
          <div class='row'>
            <div class='col-md-12'>
              <h6> <%= user.name %> </h6>
              <small> <%= user.email %> </small>
            </div>
            <div class='col-md-12'>
              <small> <%= user.cover_letter.truncate(40) %> </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
