<div class="list-group">
  <% companies.each do |company| %>
    <%= link_to show_company_path(id: company.id), class:"list-group-item list-group-item-action mb-4 post" do %>
      <div class='row'>
        <div class='col-md-3'>
        <%= image_tag(company.logo, class:'small-circle-photo') if company.logo.present? %>
        </div>
        <div class="d-flex justify-content-between mb-2 col-md-8">
          <div class='row'>
            <div class='col-md-12'>
              <h6>    <%= company.name %> </h6>
              <small> <%= company.website %> </small>
            </div>
            <div class='col-md-12'>
              <small> <%= company.description.truncate(40) %> </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
